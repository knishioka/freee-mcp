{
  "name": "freee-mcp",
  "version": "0.1.0",
  "description": "MCP server for freee accounting API integration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "freee-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "setup-auth": "node scripts/setup-auth.js",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "freee",
    "accounting",
    "api"
  ],
  "author": "knishioka",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "axios": "^1.9.0",
    "dotenv": "^16.5.0",
    "zod": "^3.25.28"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "ts-jest": "^29.3.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'npm run typecheck'"
    ]
  }
}
